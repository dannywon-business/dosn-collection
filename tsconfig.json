{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // 자바스크립트 파일 컴파일 허용 여부
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@common/*": [
        "./common/*"
      ],
      "@server/*": [
        "./server/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/i18n/settings.js",
    "app/i18n/index.js",
    "middleware.js",
    "app/cutom.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}